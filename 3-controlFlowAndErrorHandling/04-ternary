/*ternary basically acts as a shortcut for writting if and if/else statements*/

let num=6;
(num>0) ? console.log('yes') : console.log('no');



if(num>10) {console.log('first statement')}
else if (num<0){
    console.log('2nd statement')
}
else {
    console.log('yet another')
}

